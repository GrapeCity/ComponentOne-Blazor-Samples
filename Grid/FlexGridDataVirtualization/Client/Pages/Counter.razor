@page "/counter"
@using Resources 
<h1>@Resources.AppResource.Counter</h1>

<p>@Resources.AppResource.CurrentCount @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@Resources.AppResource.ClickMe</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
