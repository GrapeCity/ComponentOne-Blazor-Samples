@page "/FlexGrid/Validation"
@using BlazorExplorer.Pages;
@using System.Collections.ObjectModel;

<FlexGrid ItemsSource="@customers" HeadersVisibility="GridHeadersVisibility.All" Style="@("max-height:50vh")" RowErrorStyle="@("background-color:#FAE0E1")" ErrorStyle="@("color:red")" />
<_Sections>
    <Title>@FlexGridRes.ValidationTitle</Title>
    <Description>@FlexGridRes.ValidationDescription</Description>
</_Sections>

@code {
    ObservableCollection<Customer> customers;

    protected override void OnInitialized()
    {
        customers = Customer.GetCustomerList(100);

        customers[1].LastName = null;
        customers[3].Address = "1";
        customers[4].FirstName = "";
    }
}
